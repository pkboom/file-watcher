{
    "name": "pkboom/file-watcher",
    "description": "Watch file changes",
    "keywords": [
        "pkboom",
        "file-watcher"
    ],
    "homepage": "https://github.com/pkboom/file-watcher",
    "license": "MIT",
    "authors": [
        {
            "name": "Keunbae Park",
            "email": "ppotpo@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/collections": "^8.76",
        "symfony/finder": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0 | ^9.0",
        "spatie/test-time": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "Pkboom\\FileWatcher\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pkboom\\FileWatcher\\Test\\": "tests"
        },
        "files": [
            "tests/helpers.php"
        ]
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    }
}